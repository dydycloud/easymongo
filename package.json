{
    "name": "easymongo"
  , "version": "2.0.3"
  , "description": "Simple interface for mongodb"
  , "keywords": ["easymongo", "mongo", "mongodb"]
  , "author": "Alexey Simonenko <alexey@simonenko.su>"
  , "homepage": "http://simonenko.su/projects/easymongo"
  , "main": "./lib/index"
  , "repository": {
        "type": "git"
      , "url": "https://github.com/meritt/easymongo.git"
    }
  , "engines": {
      "node": "~0.10"
    }
  , "dependencies": {
      "mongodb": "1.3.x"
    }
  , "devDependencies": {
        "coffee-script": "1.6.x"
      , "mocha": "1.16.x"
      , "should": "2.1.x"
      , "coveralls": "2.6.x"
      , "istanbul": "0.2.x"
    }
  , "scripts": {
        "build": "./node_modules/.bin/cake build"
      , "mocha": "./node_modules/.bin/mocha --reporter dot"
      , "coveralls": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R dot && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
      , "test": "npm run build && npm run mocha && npm run coveralls"
    }
  , "license": "MIT"
}
